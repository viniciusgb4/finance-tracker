<h1>Users#my_friends</h1>

<div class="search-area">
  <h3>Search Friends</h3>
  <%= form_tag search_friend_path, method: :get, remote: true do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= email_field_tag :friend, params[:friend], placeholder: "Friend e-mail", autofocus: true, class: 'form-control form-control-lg' %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: 'btn btn-success' do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results"></div>
<%= render 'friends/list' %>